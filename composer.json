{
    "version": "0.0.3",
    "name": "yowedjamal/bjpass-backend-sdk",
    "description": "Backend SDK PHP pour BjPass - gestion OAuth2/OIDC (exchange, introspect, jwks, validation) avec int√©gration Laravel",
    "type": "library",
    "license": "MIT",
    "keywords": ["laravel", "oauth2", "oidc", "authentication", "bjpass", "sdk"],
    "authors": [
        {
            "name": "yowedjamal",
            "email": "contact@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^9.0|^10.0|^11.0",
        "guzzlehttp/guzzle": "^7.0",
        "firebase/php-jwt": "^6.0",
        "lcobucci/jwt": "^4.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0|^9.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "BjPass\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BjPass\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "BjPass\\Providers\\BjPassServiceProvider"
            ],
            "aliases": {
                "BjPass": "BjPass\\Facades\\BjPass"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src tests",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
